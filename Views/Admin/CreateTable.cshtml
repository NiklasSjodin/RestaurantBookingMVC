@model Table

<h2>Skapa nytt bord</h2>

<form asp-action="CreateTable" method="post">
    <div class="form-group">
        <label for="TableNumber">Bordsnummer</label>
        <input asp-for="TableNumber" class="form-control" id="TableNumber" />
        <span asp-validation-for="TableNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="NumberOfSeats">Platser</label>
        <input asp-for="NumberOfSeats" class="form-control" id="NumberOfSeats" />
        <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Skapa</button>
</form>
