@model Table

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">Skapa nytt bord</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CreateTable" method="post">
                        <div class="form-group mb-3">
                            <label for="TableNumber" class="form-label">Bordsnummer</label>
                            <input asp-for="TableNumber" class="form-control" id="TableNumber" />
                            <span asp-validation-for="TableNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="NumberOfSeats" class="form-label">Platser</label>
                            <input asp-for="NumberOfSeats" class="form-control" id="NumberOfSeats" />
                            <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary me-md-2">Skapa</button>
                            <a href="javascript:history.back()" class="btn btn-secondary">Avbryt</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
