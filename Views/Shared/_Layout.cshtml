<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantBookingMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantBookingMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Logo och Brand -->
                <a class="navbar-brand fs-3" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold; color: #333;">
                    BG's
                </a>

                <!-- Navbar toggler för mindre skärmar -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                HEM
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "MenuItems" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="MenuItems" asp-action="Index">
                                MENY
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Bar" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Bar" asp-action="Index">
                                BAREN
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "ChefsTable" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="ChefsTable" asp-action="Index">
                                CHEF'S TABLE
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "GiftCard" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="GiftCard" asp-action="Index">
                                PRESENTKORT
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:5173">BOKA BORD</a>
                        </li>

                        <!-- Admin-länkar -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ADMIN
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">RESERVATIONER</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="MenuItems">MENY</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Tables">BORD</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown för Kontakt och Policy -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"].ToString() == "Contacts" || ViewContext.RouteData.Values["Action"].ToString() == "Policy" ? "active" : "")"
                               href="#" id="moreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                MER
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="moreDropdown">
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Contacts" ? "active" : "")"
                                       asp-area="" asp-controller="Contacts" asp-action="Index">
                                        KONTAKT
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Action"].ToString() == "Policy" ? "active" : "")"
                                       asp-area="" asp-controller="Home" asp-action="Policy">
                                        POLICY
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>



    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Restaurang BG - <a asp-area="" asp-controller="Home" asp-action="Policy">Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
