@model LoginViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Logga In</h2>
    <form asp-for="Login" method="post" class="p-4 border rounded shadow">
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Ange din e-post" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Ange ditt lösenord" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3">LOGGA IN</button>
    </form>
</div>
